<div style="margin-top: 30px; margin-left: 30px; padding-left:100px; padding-right: 100px">
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add New Friend', new_friend_path, class:"btn btn-primary" %>
</div>